<configs>
    <append xpath="/windows">
        <window name="radioInfo" pos="9,-9" controller="RadioInfo, Wasteland-Waves" anchor="LeftTop" pivot="left" width="360" height="148">
            <rect name="hud" visible="{isVisible}" >
                <label anchor="LeftTop" color="[white]" pivot="topleft" depth="2" text="Station: {radioStation}" font_size="18" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" justify="left" />
                <label anchor="LeftTop" pos="0,-18" color="[white]" pivot="topleft" depth="3" text="Song: {currentSong}" font_size="18" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" justify="left" />
            </rect>
        </window>
    </append>
</configs>